"=======================================================
" ctrlp
"=======================================================
" agを使って検索する
if executable('ag')
  let g:ctrlp_use_caching = 0
  let g:ctrlp_user_command = 'ag %s -i --nocolor --nogroup -g ""'
endif
" デフォルトでファイル名検索モード
let g:ctrlp_by_filename = 1
" 高さ大きめ
let g:ctrlp_match_window = 'max:15'
